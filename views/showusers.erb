<table class="table table-bordered table-hover">

	<thead>
		<tr class="info">
			<th><b>Username</b></th>
			<th><b>Phone</b></th>
			<th><b>Datestamp</b></th>
			<th><b>Barbername</b></th>
			<th><b>Color</b></th>
		</tr>
	</thead>
	
	<% @results.each do |row| %>

	<tbody>
		<tr>
			<td><%= row['username'] %></td>
			<td><%= row['phone'] %></td>
			<td><%= row['datestamp'] %></td>
			<td><%= row['barbername'] %></td>
			<td><%= row['color'] %></td>
		</tr>
	</tbody>

	<% end %>

</table>